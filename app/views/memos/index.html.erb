<div class="memos-container">
  <div class="split-item split-left">
    <div class="split-left__inner">
      <h3>商品追加</h3>
      <%= form_with model: @memo, local: true do |form| %>
        <div>
          <%= form.label "商品名" %> <br />
          <%= form.text_field :name %>
        </div>
        <div>
          <%= form.label "備考" %> <br />
          <%= form.text_field :contents %>
        </div>
        <div>
          <%= form.submit "追加" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="split-item split-right">
    <div class="split-right__inner">
      <h1 class="text-center">買い物リスト</h1>
      <table class="table mt-4">
        <thead>
          <tr>
            <th scope="col">商品</th>
            <th scope="col">備考</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @memos.each do |memo| %>
            <tr>
              <td><%= memo.name %></td>
              <td><%= memo.contents %></td>
              <td><%= link_to "削除", memo_path(memo.id), method: :delete %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>







