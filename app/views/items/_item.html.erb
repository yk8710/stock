<div class="row">
  <% @items.each do |item| %>
    <div class="col">
      <div class="card" style="width: 18rem;">
        <div id="rakutenItem">
          <%= image_tag (item['smallImageUrls'][0]) %>
        </div>
        <div class="productName">
          <%= link_to item.name, "#{item.url}", class: "card-text" %>
        </div>
        <div class="productPrice">
          <%= number_with_delimiter(item.price) %>å††
        </div>
      </div>
    </div>
  <% end %>
</div>