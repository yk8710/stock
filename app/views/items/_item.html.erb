<div class="row">
  <% @items.each do |item| %>
    <div class="col">
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <div id="rakutenItem">
            <%= image_tag (item['mediumImageUrls'][0]), class: "d-block mx-auto" %>
          </div>
          <div class="productName">
            <%= link_to item.name, "#{item.url}", class: "card-text" %>
          </div>
          <div class="productPrice">
            <%= number_with_delimiter(item.price) %>å††
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
