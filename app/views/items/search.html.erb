<h1 class="stock-center">発注ページ</h1>

<div class="search-form">
<div class="col-4">
  <%= form_with url: items_search_path, method: :get, class: "d-flex", local: true do |f| %>
    <%= f.search_field :keyword, value: params[:keyword], class: "form-control me-2" %>
    <%= f.submit '欲しい商品を検索', class: "btn btn-info" %>
  <% end %>
</div>
</div>
  <% if @items.present? %>
    <%= render 'items/item' %>
  <% end %>


